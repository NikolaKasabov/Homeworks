<div id="container">

  {{> navigation}}

  <div id="edit-listing">
    <form action="#/edit" method="POST">

      <div class="container">
        <h1>Edit Car Listing</h1>
        <p>Please fill in this form to edit an listing.</p>
        <hr>
        <input type="hidden" name="carId" value="{{carInfoObj._id}}" />

        <p>Title</p>
        <input type="text" placeholder="Enter Title" name="title" value="{{carInfoObj.title}}">

        <p>Description</p>
        <input type="text" placeholder="Enter Description" name="description" value="{{carInfoObj.description}}">

        <p>Car Brand</p>
        <input type="text" placeholder="Enter Car Brand" name="brand" value="{{carInfoObj.brand}}">

        <p>Car Model</p>
        <input type="text" placeholder="Enter Car Model" name="model" value="{{carInfoObj.model}}">

        <p>Car Year</p>
        <input type="number" placeholder="Enter Car Year" name="year" value="{{carInfoObj.year}}">

        <p>Car Image</p>
        <input type="text" placeholder="Enter Car Image" name="imageUrl" value="{{carInfoObj.imageUrl}}">

        <p>Car Fuel Type</p>
        <input type="text" placeholder="Enter Car Fuel Type" name="fuelType" value="{{carInfoObj.fuel}}">

        <p>Car Price</p>
        <input type="number" placeholder="Enter Car Price" name="price" value="{{carInfoObj.price}}">

        <hr>
        <button type="submit" class="registerbtn">Edit Listing</button>
      </div>
    </form>
  </div>

  {{> footer}}

</div>